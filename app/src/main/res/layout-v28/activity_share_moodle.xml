<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".ShareMoodle">

	<EditText
		android:id="@+id/share_moodle_name_edit_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginRight="5dp"
		android:layout_marginLeft="5dp"
		android:hint="@string/name_hint" />

	<Button
		android:id="@+id/share_moodle_browse_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/browse"
		android:layout_marginStart="5dp"
		android:layout_gravity="start" />

	<TextView
		android:id="@+id/share_moodle_location"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="10dp"
		android:textColor="@color/colorPrimary"
		android:text="No location specified" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:textSize="20sp"
		android:text="Something like this" />

</LinearLayout>